<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8" name="viewport" content="width=device-width, initial-scale=1">
  <title>Class Attendance</title>
  <link rel="icon" href="/images/favicon.png">
  <link rel="stylesheet" href="css/styles.css">
  <link rel="stylesheet" href="css/viewClassAttendance.css">
  <script src="https://unpkg.com/boxicons@2.1.2/dist/boxicons.js"></script>
  <script>
    if (window.history.replaceState) {
      window.history.replaceState(null, null, window.location.href);
    }
  </script>
</head>

<body>

  <div class="navbar">
    <h1 class="nameOfTeacher">Welcome <%= teacherName %>!</h1>
    <a class="tooltip" href="/teacherLogout"><span class="tooltiptext">Logout</span><img class="logout-btn"
        src="https://img.icons8.com/external-sbts2018-mixed-sbts2018/58/000000/external-logout-social-media-basic-1-sbts2018-mixed-sbts2018.png" /></a>
  </div>

  <div class="container">
    <box-icon class="back-btn" name="arrow-back" onclick="backToHomeTeacher()"></box-icon>
    <h1 class="heading">Attendance</h1>
    <div class="input-div" method="POST">
      <input type="text" name="date" value="<%=date%>" disabled>
      <input type="text" name="branch" value="<%=branch%>" disabled>
    </div>

    <div class="box">
      <div class="attendance-card">
        <div class="sno">SNo.</div>
        <div class="enrollnum">Enrollment Number</div>
        <div class="nameOfStudent">Student Name</div>
        <div class="attendance-status">Attendance Status</div>
      </div>
      <% for(var i=0; i<present.length; i++){ %>
      <div class="attendance-card">
        <div class="sno"><%=key%></div>
        <div class="enrollnum"><%=present[i].enrollmentno%></div>
        <div class="nameOfStudent"><%=present[i].studentName%></div>
        <div class="attendance-status green">Present</div>
      </div>
      <% key++; %>
      <% } %>
      <% for(var i=0; i<absent.length; i++){ %>
      <div class="attendance-card">
        <div class="sno"><%=key%></div>
        <div class="enrollnum"><%=absent[i].enrollmentno%></div>
        <div class="nameOfStudent"><%=absent[i].studentName%></div>
        <div class="attendance-status red">Absent</div>
      </div>
      <% key++; %>
      <% } %>
    </div>
    <form class="view-attendance-form" action="/attendanceofmonth" method="POST">
      <button type="submit" name="button">View Monthly Attendance</button>
      <input type="hidden" class="stay-hidden" name="branch" value="<%=branch%>">
      <input type="hidden" class="stay-hidden" name="attendanceMonth" value="<%=month%>">
    </form>
  </div>

  <script src="js/index.js" charset="utf-8"></script>

</body>

</html>
